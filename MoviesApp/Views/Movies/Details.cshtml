@model Movie;
@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="Poster" />
    </div>
    <div class="col-md-8">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span>
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted mt-2">@Model.Rate.ToString( "0.0" )</span>
            </span>
        </div>
        
            <span class="mr-3">
                <i class="bi bi-calendar-week"></i>
                <span class="text-muted">@Model.Year</span>
            </span>
            <span>
                <i class="bi bi-film"></i>
                <span class="text-muted">@Model.Genre.Name</span>
            </span>
        <p class="mt-3 text-justify">@Model.StoreLine</p>

    </div>
</div>